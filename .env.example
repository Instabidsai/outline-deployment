# Outline Environment Configuration
# Copy this to .env and fill in your values

# General
NODE_ENV=production
SECRET_KEY=generate_64_char_random_string_here
UTILS_SECRET=generate_another_64_char_random_string_here

# Database
DATABASE_URL=postgres://outline:your_postgres_password@postgres:5432/outline
POSTGRES_PASSWORD=your_postgres_password
REDIS_URL=redis://redis:6379

# URLs
URL=https://hub.instabids.ai
COLLABORATION_URL=
FORCE_HTTPS=true

# File Storage (DigitalOcean Spaces)
AWS_ACCESS_KEY_ID=your_spaces_access_key
AWS_SECRET_ACCESS_KEY=your_spaces_secret_key
AWS_REGION=nyc3
AWS_S3_UPLOAD_BUCKET_URL=https://your-bucket.nyc3.digitaloceanspaces.com
AWS_S3_UPLOAD_BUCKET_NAME=your-bucket-name
AWS_S3_FORCE_PATH_STYLE=true
AWS_S3_ACL=private

# OAuth - Slack (recommended for your setup)
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret

# OR OAuth - Google
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_FROM_EMAIL=notifications@instabids.ai
SMTP_REPLY_EMAIL=support@instabids.ai
SMTP_TLS_CIPHERS=
SMTP_SECURE=false

# Optional Features
ENABLE_UPDATES=true
WEB_CONCURRENCY=1
MAXIMUM_IMPORT_SIZE=5120000
DEBUG=http

# Rate Limiting
RATE_LIMITER_ENABLED=true
RATE_LIMITER_REQUESTS=1000
RATE_LIMITER_DURATION_WINDOW=60

# Sentry (optional)
# SENTRY_DSN=

# Default Language
DEFAULT_LANGUAGE=en_US
